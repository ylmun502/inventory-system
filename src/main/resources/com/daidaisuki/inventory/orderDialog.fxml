<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx/13"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.daidaisuki.inventory.controller.dialog.OrderDialogController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label fx:id="dialogTitle" styleClass="dialog-title"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Customer:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="customerComboBox" promptText="Select Customer"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePicker" promptText="Date"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Payment Method:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="paymentMethodField" promptText="Platform"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Order Item Entry Section -->
    <HBox spacing="10">
        <Label text="Product:"/>
        <ComboBox fx:id="productComboBox" promptText="Select Product" prefWidth="225"/>
        <TextField fx:id="quantityField" promptText="Quantity" prefWidth="100"/>
        <Button fx:id="addItemButton" text="Add Item" onAction="#handleAddItem"/>
    </HBox>
    <VBox.margin>
        <Insets bottom="10"/>
    </VBox.margin>


    <!-- Item Table -->
    <TableView fx:id="itemTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="productCol" text="Product" prefWidth="200"/>
            <TableColumn fx:id="quantityCol" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="unitPriceCol" text="Unit Price" prefWidth="125"/>
            <TableColumn fx:id="subtotalCol" text="Subtotal" prefWidth="125"/>
            <TableColumn fx:id="actionCol" text="Actions" prefWidth="160"/>
        </columns>
    </TableView>
    <VBox.margin>
        <Insets top="10"/>
    </VBox.margin>

    <!-- Summary Totals -->
    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Label text="Total Items:"/>
        <Label fx:id="totalItemsLabel"/>
        <Label text="Total Amount:"/>
        <Label fx:id="totalAmountLabel"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button fx:id="saveButton" text="Save" onAction="#handleSave"/>
    </HBox>
</VBox>