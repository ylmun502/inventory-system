<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.daidaisuki.inventory.controller.dialog.ProductDialogController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label fx:id="dialogTitle" styleClass="dialog-title"/>

    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="categoryField" promptText="Category"/>
    <TextField fx:id="stockField" promptText="Stock Number"/>
    <TextField fx:id="priceField" promptText="Sale Price"/>
    <TextField fx:id="costField" promptText="Purchase Price"/>
    <TextField fx:id="shippingField" promptText="Shipping Fee"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Save" onAction="#handleSave"/>
    </HBox>
</VBox>
